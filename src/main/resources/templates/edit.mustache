{{>layouts/header}}
<div class="mt-3 m-auto" style="max-width:800px">
    <h1>Edit Post</h1>
{{#sameUser}}
<form action="/posts/{{postModel.id}}" method="post">
    <input type="hidden" name="_method" value="PUT"/>
    <div class="mb-2">
        <label class="form-label">Title</label>
        <input type="text" class="form-control" name="title" style="white-space: pre-wrap" value="{{postModel.title}}">
    </div>
    <div class="mb-2">
        <label class="form-label">Content</label>
        <textarea class="form-control" rows="15" name="content" style="min-height: 150px; white-space: pre-wrap">{{postModel.content}}</textarea>
    </div>
    <button type="submit" class="btn btn-warning">Submit</button>
</form>
{{/sameUser}}
</div>

{{>layouts/footer}}