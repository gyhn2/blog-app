{{>layouts/header}}
<div class="container mt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-12" style="max-width: 500px">
            {{#signUpError}}
                <div class="alert alert-danger" role="alert" style="text-align: center;">{{message}}</div>
            {{/signUpError}}
            <div class="card mt-3 mb-3 p-5">
                <h3 class="mb-3" style="text-align: center;">Create an Account</h1>
                <form action="/createUser" method="post">
                    <div class="mb-2">
                        <!--    <label class="form-label">Username</label>-->
                        <input type="text" class="form-control" name="username" value="{{#username}}{{username}}{{/username}}" placeholder="Username"
                               pattern=".{2,}" required oninvalid="this.setCustomValidity('Valid Username should be more than 2 characters')"
                               oninput="this.setCustomValidity('')"/>
                    </div>
                    <div class="mb-2">
                        <!--    <label class="form-label">Password</label>-->
                        <input type="password" class="form-control" name="password"  placeholder="Password" pattern=".{2,}" required
                               oninvalid="this.setCustomValidity('Enter Password')"
                               oninput="this.setCustomValidity('')">
                    </div>
                   <div class="mb-2 mt-3">
                        <button type="submit" class="btn btn-primary col-12">Submit</button>
                    </div>
                    <a href="/sign-in" class="link-secondary text-decoration-none mb-2">Have an acount? Sign in.</a>
                </form>
            </div>
        </div>
    </div>
 </div>
{{>layouts/footer}}
