{{>layouts/header}}
<div class="d-flex justify-content-center align-items-center mt-5">
    <div class="col-12" style="max-width: 500px">
        {{#signInError}}
            <div class="alert alert-danger" role="alert" style="text-align: center;">{{message}}</div>
        {{/signInError}}
        {{#signUpSuccess}}
            <div class="alert alert-success" role="alert" style="text-align: center;">{{signUpSuccess}}</div>
        {{/signUpSuccess}}
        <div class="card mt-3 mb-3 p-5">
            <h3 class="mb-3" style="text-align: center;">Welcome</h1>
            <form class="container" action="/sign-in" method="post">
               <div class="mb-2">
            <!--    <label class="form-label">Username</label>-->
                <input type="text" class="form-control" name="username" value="{{#signInError}}{{username}}{{/signInError}}" placeholder="Username"
                       pattern=".{2,}" required oninvalid="this.setCustomValidity('Username ')"
                       oninput="this.setCustomValidity('')"/>
              </div>
               <div class="mb-2">
            <!--    <label class="form-label">Password</label>-->
                <input type="password" class="form-control" name="password" placeholder="Password"
                       pattern=".{2,}" required oninvalid="this.setCustomValidity('Enter Password')"
                       oninput="this.setCustomValidity('')">
               </div>
               <div class="mb-2 mt-3">
                    <button type="submit" class="btn btn-primary col-12">Sign In</button>
                </div>
                <a href="/sign-up" class="link-secondary text-decoration-none mb-2">Register</a>
            </form>
        </div>
    </div>
</div>
{{>layouts/footer}}